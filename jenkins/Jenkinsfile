pipeline {
  agent none
  stages {
    stage('npm install') {
      agent {
        docker { image 'node:9-alpine' }
      }
      steps {
        sh 'npm install'
      }
    }
    stage('npm test') {
      agent {
        docker { image 'node:9-alpine' }
      }
      steps {
        sh 'npm test'
      }
    }
    stage('build production') {
      agent {
        docker { image 'node:9-alpine' }
      }
      steps {
        sh 'npm run build:production'
      }
    }
    stage('build docker') {
      parallel {
        stage('gradlew build docker') {
          agent {
            docker {
              image 'openjdk:8-jdk-alpine'
              args '-v /var/run/docker.sock:/var/run/docker.sock'
            }
          }
          steps {
            sh './gradlew build docker dockerRun'
          }
        }
        stage('dockerfile test') {
          agent { dockerfile { dir 'docker' } }
          steps {
            sh 'echo "use dockerfile"'
          }
        }
      }
    }
  }
}
