pipeline {
  agent {
    docker {
      args '-p 3000:3000'
      image 'node:9-alpine'
    }
    
  }
  stages {
    stage('npm install') {
      steps {
        sh 'npm install'
      }
    }
    stage('npm test') {
      steps {
        sh 'npm test'
      }
    }
    stage('build production') {
      steps {
        sh 'npm run build:production'
      }
    }
    stage('build docker') {
      steps {
        sh './gradlew buildDocker'
      }
    }
    stage('start container') {
      steps {
        sh 'docker run stefanhauschildt/freyafitness'
      }
    }
  }
}
